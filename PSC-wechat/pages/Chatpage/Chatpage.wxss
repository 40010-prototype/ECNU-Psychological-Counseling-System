.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #F5F5F5;
    padding-top: 180rpx;
  }
  
  /* 对方信息栏样式 */
  .partner-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    background-color: #FFFFFF;
    border-bottom: 1rpx solid #E8E8E8;
    height: 160rpx;
  }
  
  .partner-info {
    display: flex;
    align-items: center;
  }
  
  .partner-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 24rpx;
    border: 2rpx solid #D4B08C;
  }
  
  .partner-details {
    display: flex;
    flex-direction: column;
  }
  
  .partner-name {
    font-size: 34rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .partner-title {
    font-size: 26rpx;
    color: #666666;
  }
  
  .status-indicator {
    font-size: 24rpx;
    padding: 8rpx 20rpx;
    border-radius: 24rpx;
    font-weight: 500;
  }
  
  .status-indicator.online {
    background-color: #E8F5E9;
    color: #4CAF50;
  }
  
  .status-indicator.offline {
    background-color: #F5F5F5;
    color: #999999;
  }
  
  /* 消息列表样式 */
  .message-list {
    flex: 1;
    padding: 24rpx 30rpx;
    overflow-y: auto;
  }
  
  .loading-more {
    text-align: center;
    padding: 20rpx 0;
  }
  
  .loading-more text {
    font-size: 24rpx;
    color: #999999;
  }
  
  .time-divider {
    text-align: center;
    margin: 30rpx 0;
  }
  
  .time-divider text {
    font-size: 24rpx;
    color: #999999;
    background-color: rgba(0, 0, 0, 0.05);
    padding: 6rpx 20rpx;
    border-radius: 24rpx;
  }
  
  .message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  
  .message .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex-shrink: 0;
  }
  
  .message-content {
    display: flex;
    flex-direction: column;
    max-width: 60%;
  }
  
  .message .bubble {
    padding: 20rpx 24rpx;
    border-radius: 20rpx;
    font-size: 28rpx;
    line-height: 1.6;
    word-wrap: break-word;
    position: relative;
  }
  
  .message-time {
    font-size: 24rpx;
    color: #999999;
    margin-top: 8rpx;
    padding: 0 12rpx;
  }
  
  /* 对方消息样式 */
  .partner-message {
    padding-right: 15%;
  }
  
  .partner-message .avatar {
    margin-right: 20rpx;
  }
  
  .partner-message .message-content {
    align-items: flex-start;
  }
  
  .partner-message .bubble {
    background-color: #FFFFFF;
    color: #333333;
    border-top-left-radius: 4rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .partner-message .message-time {
    text-align: left;
  }
  
  /* 我的消息样式 */
  .my-message {
    flex-direction: row-reverse;
    padding-left: 15%;
  }
  
  .my-message .avatar {
    margin-left: 20rpx;
  }
  
  .my-message .message-content {
    align-items: flex-end;
  }
  
  .my-message .bubble {
    background-color: #D4B08C;
    color: #FFFFFF;
    border-top-right-radius: 4rpx;
  }
  
  .my-message .message-time {
    text-align: right;
  }
  
  /* 输入区域样式 */
  .input-area {
    background-color: #FFFFFF;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #E8E8E8;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .input-wrapper {
    display: flex;
    align-items: center;
    background-color: #F5F5F5;
    border-radius: 36rpx;
    padding: 0 20rpx;
    height: 80rpx;
  }
  
  .input-wrapper input {
    flex: 1;
    height: 80rpx;
    font-size: 28rpx;
    color: #333333;
    padding: 0 20rpx;
  }
  
  .send-button {
    width: 120rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #999999;
    transition: all 0.3s ease;
  }
  
  .send-button.active {
    color: #D4B08C;
    font-weight: 500;
  }