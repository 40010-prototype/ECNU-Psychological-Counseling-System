.chat-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f9f6f1;
  }
  
  /* 自定义导航栏 */
  .custom-navbar {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 120rpx;
    background-color: #ffffff;
    position: relative;
    border-bottom: 1px solid #ccc;
  }
  
  .nav-back {
    position: absolute;
    left: 20rpx;
    font-size: 40rpx;
    color: #333;
  }
  
  .nav-title {
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
  }
  
  .end-consult-btn {
    position: absolute;
    right: 20rpx;
    background-color: #d2b48c;
    color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
  }
  
  /* 聊天消息区 */
  .message-list {
    flex: 1;
    padding: 20rpx;
  }
  
  .message-item {
    display: flex;
    margin: 10rpx 0;
  }
  
  .message-item.other {
    justify-content: flex-start;
  }
  
  .message-item.self {
    justify-content: flex-end;
  }
  
  .bubble {
    max-width: 60%;
    padding: 16rpx;
    border-radius: 16rpx;
    word-wrap: break-word;
    font-size: 28rpx;
    line-height: 40rpx;
  }
  
  .message-item.other .bubble {
    background-color: #e0e0e0;
    color: #333;
  }
  
  .message-item.self .bubble {
    background-color: #d2b48c;
    color: #fff;
  }
  
  /* 输入区 */
  .input-area {
    display: flex;
    align-items: center;
    padding: 10rpx;
    background-color: #ffffff;
    border-top: 1px solid #ccc;
  }
  
  .emoji-button {
    font-size: 40rpx;
    padding: 0 20rpx;
  }
  
  .input-box {
    flex: 1;
    padding: 10rpx;
    font-size: 28rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    margin: 0 10rpx;
  }
  
  .send-button {
    background-color: #d2b48c;
    color: #fff;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
  }
  
  /* 表情面板 */
  .emoji-picker {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
    background-color: #ffffff;
    border-top: 1px solid #ccc;
  }
  
  .emoji {
    width: 80rpx;
    height: 80rpx;
    font-size: 40rpx;
    text-align: center;
    line-height: 80rpx;
  }
  
  /* 评分弹窗样式 */
  .rating-dialog {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  
  .rating-content {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
    width: 80%;
    max-width: 600rpx;
  }
  
  .rating-title {
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
  }
  
  .rating-stars {
    display: flex;
    justify-content: center;
    gap: 20rpx;
    margin-bottom: 40rpx;
  }
  
  .star {
    font-size: 60rpx;
    color: #ddd;
    cursor: pointer;
  }
  
  .star.active {
    color: #ffd700;
  }
  
  .rating-buttons {
    display: flex;
    justify-content: space-between;
    gap: 20rpx;
  }
  
  .cancel-btn, .confirm-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 28rpx;
  }
  
  .cancel-btn {
    background-color: #f5f5f5;
    color: #666;
  }
  
  .confirm-btn {
    background-color: #d2b48c;
    color: #fff;
  }
  
  .confirm-btn[disabled] {
    background-color: #ccc;
    color: #fff;
  }
  
  .confirm-btn.active {
    background-color: #d2b48c;
  }
  