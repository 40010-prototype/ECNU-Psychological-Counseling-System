.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  display: flex;
  flex-direction: column;
}

.scroll-container {
  flex: 1;
  height: calc(100vh - 88rpx);
}

.content-container {
  padding: 24rpx 16rpx;
  box-sizing: border-box;
}

/* 信息卡片 */
.info-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-bottom: 16rpx;
  border: 3rpx solid #8B7355;
}

.name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

/* 信息部分 */
.info-section {
  width: 100%;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #666666;
}

.value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

/* 修改信息按钮 */
.edit-button {
  width: 100% !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  background: #FFFFFF !important;
  color: #333333 !important;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: none;
}

.edit-button::after {
  border: none;
}

.button-text {
  color: #333333;
}

.arrow {
  color: #999999;
  font-size: 28rpx;
  transform: rotate(90deg);
}

.edit-button:active {
  opacity: 0.8;
} 