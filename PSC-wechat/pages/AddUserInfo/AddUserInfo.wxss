/* pages/AddUserInfo/AddUserInfo.wxss */
.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  display: flex;
  flex-direction: column;
}

.scroll-container {
  flex: 1;
  height: calc(100vh - 88rpx);
}

.content-container {
  padding: 24rpx 16rpx;
  box-sizing: border-box;
}

/* 表单头部 */
.form-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 16rpx 0;
}

.form-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.form-subtitle {
  font-size: 26rpx;
  color: #666666;
  display: block;
}

/* 表单区域 */
.form-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #8B7355;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #333333;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  background: #FFFFFF;
  box-shadow: 0 0 0 2rpx rgba(139, 115, 85, 0.1);
}

/* 单选框组 */
.radio-group {
  display: flex;
  gap: 48rpx;
  width: 100%;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333333;
}

.radio-label radio {
  margin-right: 8rpx;
  transform: scale(0.9);
}

/* 提交按钮 */
.submit-button {
  width: 100% !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  background: #CCCCCC !important;
  color: #FFFFFF !important;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 10rpx;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  border: none;
  box-sizing: border-box;
}

.submit-button.active {
  background: linear-gradient(135deg, #8B7355 0%, #A18E76 100%) !important;
}

.submit-button::after {
  border: none;
}

.submit-button[loading] {
  opacity: 0.7;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 