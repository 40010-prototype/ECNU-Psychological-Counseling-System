/* pages/AddUserInfo/AddUserInfo.wxss */
.container {
    height: 100vh;
    background-color: #F8F9FA;
    display: flex;
    flex-direction: column;
    padding-top: 0;
    margin-top: 0;

}

.scroll-container {
    flex: 1;
    height: 100%;
}

.form-container {
    padding: 24rpx 16rpx;
    box-sizing: border-box;
}

/* 表单头部 */
.form-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.form-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.form-subtitle {
  font-size: 26rpx;
  color: #666666;
  display: block;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 12rpx;
  border: 4rpx solid #8B7355;
  background-color: #FFFFFF;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666666;
}

/* 表单区域 */
.form-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #8B7355;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

/* 单选框组 */
.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

/* 提交按钮 */
.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #CCCCCC;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 48rpx;
  transition: all 0.3s ease;
}

.submit-button.active {
  background: #8B7355;
}

.submit-button[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.8;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 